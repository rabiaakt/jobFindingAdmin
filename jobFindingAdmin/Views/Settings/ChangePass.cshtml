
@{
    ViewBag.Title = "Parola Değiştirme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            @model jobFindingAdmin.Models.HelperModel.SettingModel
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Ayarlar</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm("ChangePass", "Settings", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.ID)
                        <div class="form-group">
                            <label class=" mb-1" for="inputEmailAddress"> Parola: </label>
                            @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control py-4 pwd", value = @Model.OldPassword })
                            <span style="float: right;margin-left: -25px;margin-top: -35px;position: relative;z-index: 2;margin-right: 5px;">
                                <button class="btn btn-default toggle-password" type="button">
                                    <i class="fas fa-eye eye"></i>
                                </button>
                            </span>
                        </div>
                        <div class="form-group">
                            <label class=" mb-1" for="inputEmailAddress"> Yeni Parola: </label>
                            @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control py-4 pwd2" })
                            <span style="float: right;margin-left: -25px;margin-top: -35px;position: relative;z-index: 2;margin-right: 5px;">
                                <button class="btn btn-default toggle-password2" type="button">
                                    <i class="fas fa-eye eye2"></i>
                                </button>
                            </span>
                        </div>
                        <div class="form-group">
                            <label class=" mb-1" for="inputEmailAddress"> Yeni Parola Onay: </label>
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control py-4 pwd3" })
                            <span style="float: right;margin-left: -25px;margin-top: -35px;position: relative;z-index: 2;margin-right: 5px;">
                                <button class="btn btn-default toggle-password3" type="button">
                                    <i class="fas fa-eye eye3"></i>
                                </button>
                            </span>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form- text-danger">
                            @ViewBag.Warning
                        </div>
                        <div class="form-group text-success">
                            @ViewBag.Success

                        </div>
                        <button class="btn btn-primary" type="submit">Kaydet</button>

                    }
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    $(window).on('load', function () {
        var input = $('.pwd');
        var input2 = $('.pwd2');
        var input3 = $('.pwd3');
        input.attr("type", "password");
        input2.attr("type", "password");
        input3.attr("type", "password");
    })
    $(".toggle-password").click(function () {
        var input = $('.pwd');
        if (input.attr("type") == "password") {
            $('.eye').removeClass("fa-eye");
            $('.eye').addClass("fa-eye-slash");
            input.attr("type", "text");
        } else {
            $('.eye').removeClass("fa-eye-slash");
            $('.eye').addClass("fa-eye");
            input.attr("type", "password");
        }
    });
    $(".toggle-password2").click(function () {
        var input = $('.pwd2');
        if (input.attr("type") == "password") {
            $('.eye2').removeClass("fa-eye");
            $('.eye2').addClass("fa-eye-slash");
            input.attr("type", "text");
        } else {
            $('.eye2').removeClass("fa-eye-slash");
            $('.eye2').addClass("fa-eye");
            input.attr("type", "password");
        }
    });
    $(".toggle-password3").click(function () {
        var input = $('.pwd3');
        if (input.attr("type") == "password") {
            $('.eye3').removeClass("fa-eye");
            $('.eye3').addClass("fa-eye-slash");
            input.attr("type", "text");
        } else {
            $('.eye3').removeClass("fa-eye-slash");
            $('.eye3').addClass("fa-eye");
            input.attr("type", "password");
        }
    });
</script>
