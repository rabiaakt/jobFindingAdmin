
@{
    ViewBag.Title = "Bölüm Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            @model jobFindingAdmin.Models.departments
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Bölüm Düzenleme</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Department", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.departmentsId)
                        <div class="form-group">
                            <label class=" mb-1" for="inputEmailAddress">Sektör Adı</label>
                            @Html.TextBoxFor(x => x.departmentName, new { @class = "form-control py-4", id = "inputEmail", placeholder = @Model.departmentName, required = "required", type = "text" })
                        </div>
                        <div class="form-group">
                            <span style="color:red">
                                @ViewBag.Warning
                            </span>
                        </div>
                        <button class="btn btn-primary" type="submit">Düzenle</button>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

